<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>ai.voitta.JetbrainsVoitta</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>JetBrains-Voitta - Enhanced AST and Debug Tools</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://www.voitta.ai">Voitta.AI</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        Enhanced MCP tools for AST analysis and debug inspection supporting both Java and PHP.<br>
        <em>Provides advanced debugging tools with rich variable inspection, full stack trace support, AST analysis, and code pattern detection for Java and PHP projects.</em>
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends optional="true" config-file="java-support.xml">com.intellij.modules.java</depends>
    <depends optional="true" config-file="php-support.xml">com.jetbrains.php</depends>
    <depends>com.intellij.mcpServer</depends>

    <extensions defaultExtensionNs="com.intellij.mcpServer">
        
        <!-- Platform Information Tool (Always Available) -->
        <!-- mcpTool implementation="ai.voitta.jetbrains.utils.GetPlatformInfoTool"/ -->
        
        <!-- Universal Language-Agnostic Tools -->
        <mcpTool implementation="ai.voitta.jetbrains.ast.common.GetUniversalFileAstTool"/>
        <mcpTool implementation="ai.voitta.jetbrains.ast.common.GetUniversalMethodDetailsTool"/>
        <mcpTool implementation="ai.voitta.jetbrains.ast.common.SuggestUniversalBreakpointLinesTool"/>
        <mcpTool implementation="ai.voitta.jetbrains.ast.common.GetUniversalMethodComplexityTool"/>
        <mcpTool implementation="ai.voitta.jetbrains.ast.common.DetectUniversalCodePatternsTool"/>
        <mcpTool implementation="ai.voitta.jetbrains.ast.common.GetUniversalClassHierarchyTool"/>
        
    </extensions>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- MCP Server initialization on startup -->
        <postStartupActivity implementation="ai.voitta.jetbrains.startup.McpServerInitializer"/>
        
        <!-- MCP Health check REST endpoint -->
        <restService implementation="ai.voitta.jetbrains.startup.McpHealthCheckService"/>
    </extensions>
</idea-plugin>
